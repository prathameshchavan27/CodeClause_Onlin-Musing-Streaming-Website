<%- include("header") -%>

<div class="cover">
    <div class="container">
        <div class="playlistbar">
            <h1 class="home">Top 50 - Global</h1>
            <form action="/music" method="post">
                <button id="showall" name="playlist" value="Top 50 - Global" type="submit" class="nav-link btn btn-outline-dark float-end" href="#">Show All</button>
            </form>
        </div>
        <div class="listsong">
            <%for(var i=0;i<6;i++){%>
                <div onclick="songlist('<%=songs[i].name%>','<%=songs[i].no%>')" class="songitem">
                    <img class="album" src="images/top50.jpeg">
                    <p><%=songs[i].name%></p>
                </div>
            <%}%>
        </div>
        <hr>
        <div class="listsong">
            <%for(var i=6;i<12;i++){%>
                <div onclick="songlist('<%=songs[i].name%>','<%=songs[i].no%>')" class="songitem">
                    <img class="album" src="images/top50.jpeg">
                    <p><%=songs[i].name%></p>
                </div>
            <%}%>
        </div>
    </div>
</div>
<section id="Footer">
    <div class="bottom">
        <input type="range" name="range" id="myProgressBar" min="0" value="0" max="100">
        <div class="currPlay">
            <h6 id="songname">Under The Influence</h6>
            <div class="icons">
                <i onclick="backward()" id="back" class="fa-solid fa-2x fa-step-backward"></i>
                <i onclick="playsong()" id="play/pause" class="fa-regular fa-2x fa-circle-play"></i>
                <i onclick="forward()" id="forward" class="fa-solid fa-2x fa-step-forward"></i>
            </div>
        </div>
       
    </div>
</section>
</body>
</html>
